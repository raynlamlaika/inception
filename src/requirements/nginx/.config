server {
    # 1. Standard SSL Setup
    listen 443 ssl;
    listen [::]:443 ssl; # Support for IPv6

    # 2. Server Name (Replace with your login.42.fr)
    server_name localhost;

    # 3. SSL Paths
    ssl_certificate /etc/ssl/certs/nginx.crt;
    ssl_certificate_key /etc/ssl/private/nginx.key;
    ssl_protocols TLSv1.2 TLSv1.3;

    # 4. Root Directory (Inception standard is usually /var/www/html)
    root /var/www/html;
    index index.php index.html;

    # 5. The Main Location
    location / 
    {
        try_files $uri $uri/ /index.php?$args;
    }

    # 6. The "Bridge" to WordPress (PHP-FPM)
    location ~ \.php$ 
    {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        # 'wordpress' must match the service name in your docker-compose.yml
        fastcgi_pass wordpress:9000; 
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
    }
}